{
	"name": "Dim_Location",
	"properties": {
		"folder": {
			"name": "transformation"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_cities_code",
						"type": "DatasetReference"
					},
					"name": "AirportsSource"
				},
				{
					"dataset": {
						"referenceName": "ds_cities_connection",
						"type": "DatasetReference"
					},
					"name": "CountriesSource"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_transformed_datalake",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "LeftOuterJoin"
				},
				{
					"name": "select1"
				},
				{
					"name": "surrogateKey1"
				},
				{
					"name": "select2"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as string,",
				"          ident as string,",
				"          type as string,",
				"          name as string,",
				"          latitude_deg as string,",
				"          longitude_deg as string,",
				"          elevation_ft as string,",
				"          continent as string,",
				"          iso_country as string,",
				"          iso_region as string,",
				"          municipality as string,",
				"          scheduled_service as string,",
				"          icao_code as string,",
				"          iata_code as string,",
				"          gps_code as string,",
				"          local_code as string,",
				"          home_link as string,",
				"          wikipedia_link as string,",
				"          keywords as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> AirportsSource",
				"source(output(",
				"          Name as string,",
				"          Code as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> CountriesSource",
				"AirportsSource, CountriesSource join(iso_country == Code,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> LeftOuterJoin",
				"LeftOuterJoin select(mapColumn(",
				"          Airport_Code_ICAO = ident,",
				"          Country_Name = AirportsSource@name,",
				"          Region = continent,",
				"          City = municipality,",
				"          Airport_Name = CountriesSource@Name",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 keyGenerate(output(Location_Key as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey1",
				"surrogateKey1 select(mapColumn(",
				"          Airport_Code_ICAO,",
				"          Airport_Name = Country_Name,",
				"          Region,",
				"          City,",
				"          Country_Name = Airport_Name,",
				"          Location_Key",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select2",
				"select2 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     partitionFileNames:['Dim_Location.parquet'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink"
			]
		}
	}
}