{
	"name": "Dim_Trends",
	"properties": {
		"folder": {
			"name": "transformation"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_trends_datalake",
						"type": "DatasetReference"
					},
					"name": "Trends"
				},
				{
					"dataset": {
						"referenceName": "ds_transformed_datalake",
						"type": "DatasetReference"
					},
					"name": "DimDate"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_transformed_datalake",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "lookup1"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				},
				{
					"name": "surrogateKey1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as long,",
				"          year as integer,",
				"          month as integer,",
				"          day as integer,",
				"          country as string,",
				"          event as string,",
				"          full_text as string,",
				"          date as date",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> Trends",
				"source(output(",
				"          date as date,",
				"          FullDate as date,",
				"          Year as integer,",
				"          Day as integer,",
				"          Month as integer,",
				"          DayName as integer,",
				"          Date_Key as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet',",
				"     wildcardPaths:['Dim_Date.parquet']) ~> DimDate",
				"Trends, DimDate lookup(Trends@date == FullDate,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookup1",
				"lookup1 derive(Type = 'Global Event') ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          Event_Name = event,",
				"          Description = full_text,",
				"          Date_Key_FK = Date_Key,",
				"          Type",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 keyGenerate(output(Trend_Key as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey1",
				"surrogateKey1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     partitionFileNames:['Dim_Global_Trends.parquet'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}